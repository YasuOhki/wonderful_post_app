<p id="notice"><%= notice %></p>

<div class="card">
  <div class="card-header">
    <%= @article.title %>
  </div>
  <div class="card-body">
    <%= @article.content %>
  </div>
</div>
<% if user_signed_in? && @article.user_id == current_user.id %>
  <%= link_to t("articles.show.edit"), edit_article_path(@article), class: "btn btn-warning" %>
<% end %>
<%= link_to t("articles.show.back"), articles_path, class: "btn btn-secondary" %>
