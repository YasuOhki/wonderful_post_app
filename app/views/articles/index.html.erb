
<!-- ログインしている場合はマイページを表示、ログインしていない場合はログインボタンを表示 -->
<% if user_signed_in? %>
  <p> ログイン中 </p>
  <%= link_to t('.my_page'), new_article_path, class: "btn btn-primary" %>
  <%= link_to t('.sign_out'),  destroy_user_session_path, class: "btn btn-primary"%>
<% else %>
  <p> ログアウト中 </p>
  <br><%= link_to t('.sign_in'), new_user_session_path, class: "btn btn-primary" %>
  <%= link_to t('.registration'), new_user_registration_path, class: "btn btn-primary" %>
<% end %>



<h1><%= t('.all_articles')%></h1>
<%= link_to t('.serach'), "#", class: "btn btn-primary" %>

<br><%= link_to t('.new'), new_article_path %>
<table>
  <thead>
    <tr>
      <th><%= t('.title') %></th>
      <th><%= t('.content') %></th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @articles.each do |article| %>
      <tr>
        <td><%= article.title %></td>
        <td><%= article.content %></td>
        <td><%= link_to t('.show'), article, class: "btn btn-success" %></td>
        <td><%= link_to t('.edit'), edit_article_path(article), class: "btn btn-warning" %></td>
        <td><%= link_to t('.destroy'), article, class: "btn btn-danger", method: :delete, data: { confirm: '本当に削除しますか?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
